<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <!-- TO FIX: MAKE THESE COLLAPSIBLE -->
    <% if (!user) { %>
    <div class="nav navbar-nav navbar-right">
      <form class="form-inline form-inline-sm" style="align-self:flex-end" action="/login" method="GET">
        <div class="form-group mb-2 mr-2">
          <button type="submit" class="btn btn-outline-light">Login</button>
        </div>
      </form>
      <form class="form-inline form-inline-sm" style="align-self:flex-end" action="/register" method="GET">
        <div class="form-group mb-2">
          <button type="submit" class="btn btn-primary">Register</button>
        </div>
      </form>
    </div>
    <% } else { %>
    <div class="nav navbar-nav navbar-right"> 
      <form class="form-inline form-inline-sm" action="/logout" method="POST">
        <div class="form-group mb-2">
          <label class="form-check-label" style="padding-right:10px; color:white">Logged in as <%= user.email %>!</label>
          <button type="submit" class="btn btn-outline-light">Log Out</button>
        </div>
      </form>
    </div>
    <% } %>
  </nav>

</header>